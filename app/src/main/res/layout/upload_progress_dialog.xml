<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/uploadDialog_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/upload_dialog_progressBar_padding" />

    <TextView
        android:id="@+id/uploadDialog_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/upload_dialog_textView"
        android:textColor="@color/login_button_text_color"
        android:textSize="@dimen/upload_dialog_textView_textSize"
        android:padding="@dimen/upload_dialog_progressBar_padding" />
</LinearLayout>